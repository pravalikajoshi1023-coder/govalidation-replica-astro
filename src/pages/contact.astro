<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us - GoVal</title>
  <style>
    /* Base Styles */
    body { 
      font-family: 'Inter', Arial, sans-serif; 
      margin: 0; 
      padding: 0; 
      background-color: #f8f9ff; 
      color: #333; 
      line-height: 1.6; 
    }
    .main-container { 
      display: flex; 
      max-width: 1200px; 
      margin: 0 auto; 
      padding: 60px 20px; 
      gap: 40px; 
      align-items: flex-start; 
    }
    .left-side { 
      flex: 1; 
      max-width: 500px; 
      text-align: left;
    }
    .right-side { 
      flex: 1; 
      display: flex; 
      flex-direction: column; 
      align-items: flex-start; 
      gap: 30px; 
    }
    .contact-image { 
      width: 100%; 
      max-width: 500px; 
      height: auto; 
      aspect-ratio: 1 / 1; 
      border-radius: 12px; 
      object-fit: cover; 
      box-shadow: 0 8px 20px rgba(0,0,0,0.15); 
      border: 4px solid #007bff; 
      align-self: center; 
    }
    .locations { 
      padding: 25px; 
      background-color: #ffffff; 
      border-radius: 12px; 
      width: 100%; 
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
      border-left: 5px solid #ff9500;
      text-align: left; 
      color: #333; 
      font-size: 15px; 
      line-height: 1.6; 
    }
    .locations h3 { 
      color: #007bff; 
      margin-bottom: 12px; 
      font-size: 18px; 
      border-bottom: 1px solid #eee;
      padding-bottom: 5px;
    }
    .locations strong { 
      color: #007bff; 
      font-weight: 700;
    }
    .email-link { 
      color: #007bff; 
      text-decoration: none; 
      font-weight: 600; 
      transition: color 0.2s;
    }
    .email-link:hover { 
      text-decoration: underline; 
      color: #ff9500;
    }
    .title { 
      font-size: 2.5em; 
      background: linear-gradient(45deg, #8b5cf6, #ec4899, #3b82f6); 
      -webkit-background-clip: text; 
      -webkit-text-fill-color: transparent; 
      background-clip: text; 
      margin-bottom: 15px; 
      font-weight: 800; 
      text-align: left; 
    }
    .para { 
      font-size: 17px; 
      color: #555; 
      margin-bottom: 30px; 
      max-width: 100%; 
      text-align: left; 
    }
    .contact-us { 
      font-size: 15px; 
      color: #000; 
      margin-bottom: 20px; 
      font-weight: bold; 
      display: block; 
      text-align: left; 
      text-transform: uppercase;
    }
    form { 
      display: flex; 
      flex-direction: column; 
      gap: 15px; 
      max-width: 100%; 
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color: #fff;
    }
    label { 
      font-size: 14px; 
      color: #333; 
      font-weight: bold; 
      margin-bottom: 3px; 
      display: block; 
    }
    input, select, textarea { 
      width: 100%; 
      padding: 12px; 
      border: 1px solid #ddd; 
      border-radius: 8px; 
      font-size: 16px; 
      box-sizing: border-box; 
      transition: border-color 0.3s, box-shadow 0.3s;
    }
    input:focus, select:focus, textarea:focus { 
      outline: none; 
      border-color: #007bff; 
      box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.15); 
    }
    .required { color: #ff0000; }
    textarea { 
      resize: vertical; 
      min-height: 100px; 
    }
    .checkbox-group { 
      display: flex; 
      align-items: flex-start; 
      gap: 10px; 
      font-size: 14px; 
    }
    .checkbox-group input[type="checkbox"] { 
      margin-top: 5px; 
      width: 20px; 
      height: 20px;
      min-width: 20px;
      min-height: 20px;
      border-radius: 4px;
      cursor: pointer;
    }
    .privacy-text { 
      font-size: 12px; 
      color: #999; 
      margin-top: 5px; 
      line-height: 1.4; 
    }
    .submit-btn { 
      background-color: #ff9500; 
      color: white; 
      padding: 15px 30px; 
      font-size: 18px; 
      font-weight: bold; 
      border: none; 
      border-radius: 8px; 
      cursor: pointer; 
      transition: background-color 0.3s, transform 0.1s; 
      align-self: center; 
      margin-top: 15px; 
      box-shadow: 0 4px 10px rgba(255, 149, 0, 0.3);
    }
    .submit-btn:hover { 
      background-color: #e68900; 
      transform: translateY(-1px);
    }
    .support { 
      text-align: left; 
      margin-top: 40px; 
      padding: 20px; 
      border-top: 1px solid #eee; 
      max-width: 100%; 
    }
    .support h3 { 
      color: #333; 
      margin-bottom: 10px; 
    }
    .support p { 
      color: #666; 
      margin: 5px 0; 
    }

    /* Footer Styles (Replacement for Astro component) */
    .site-footer {
        padding: 30px 20px;
        text-align: center;
        background-color: #2c3e50; 
        color: white;
        margin-top: 50px;
    }
    .site-footer p {
        margin: 5px 0;
        font-size: 14px;
    }
    .site-footer a {
        color: #ff9500;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }
    .site-footer a:hover {
        color: #ffc107;
    }

    /* Custom Message Modal Styles (Replaces alert()) */
    .message-modal {
      display: none; 
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.5); 
      padding-top: 60px;
    }
    .modal-content {
      background-color: #fefefe;
      margin: 10% auto; 
      padding: 30px;
      border: none;
      width: 90%; 
      max-width: 400px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 10px 25px rgba(0,0,0,0.4);
      animation: fadeIn 0.3s;
    }
    .modal-content p {
        font-size: 1.1em;
        color: #333;
        font-weight: 500;
    }
    .ok-btn {
      background-color: #007bff;
      color: white;
      padding: 12px 25px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      margin-top: 20px;
      font-weight: bold;
      transition: background-color 0.2s;
    }
    .ok-btn:hover {
      background-color: #0056b3;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }


    /* --- Responsive: Stack on Mobile --- */
    @media (max-width: 768px) { 
      .main-container { 
        flex-direction: column; 
        padding: 40px 15px; 
        gap: 30px; 
        width: 100%; 
      }
      .left-side, .right-side { 
        max-width: 100%; 
        width: 100%; 
        align-items: center; 
      }
      .title, .para, .contact-us, .support, .support h3 {
        text-align: center; 
      }
      .contact-image { 
        max-width: 300px; 
        height: auto; 
        margin: 0 auto 10px auto; 
      }
      .locations { 
        padding: 20px; 
        font-size: 14px; 
      }
      form { 
        padding: 15px; 
        gap: 12px; 
      }
      .checkbox-group { 
        justify-content: center; 
        text-align: left; 
      }
      .submit-btn { 
        width: 80%; 
        max-width: 300px;
      }
      
      /* Extra adjustments for touch targets */
      input, select, textarea {
        padding: 15px; 
      }
    }
  </style>
</head>
<body>
  <div class="main-container">
    <!-- Left Side: Title, Para, Form, Support -->
    <div class="left-side">
      <!-- Title with Gradient -->
      <h1 class="title">Get in Touch with GoVal</h1>
      
      <!-- Paragraph -->
      <p class="para">
        We'd love to hear from you! Whether you have questions about our solutions, need a demo, or want to discuss how GoVal can help streamline your validation processes, our team is here to assist you.
      </p>
      
      <!-- Contact Us Label -->
      <h6 class="contact-us">Contact Us</h6>
      
      <!-- Form -->
      <form id="contactForm" onsubmit="handleSubmit(event)">
        <!-- Name -->
        <div>
          <label for="name">Name <span class="required">*</span></label>
          <input type="text" id="name" name="name" required placeholder="Full Name">
        </div>
        
        <!-- Business Email -->
        <div>
          <label for="email">Business Email <span class="required">*</span></label>
          <input type="email" id="email" name="email" placeholder="yourname@company.com" required>
        </div>
        
        <!-- Contact Number -->
        <div>
          <label for="phone">Contact Number with Country Code <span class="required">*</span></label>
          <input type="tel" id="phone" name="phone" placeholder="+1 555 123 4567" required>
        </div>
        
        <!-- Country Dropdown -->
        <div>
          <label for="country">Country <span class="required">*</span></label>
          <select id="country" name="country" required>
            <option value="">Select Country</option>
            <option value="US">United States</option>
            <option value="UK">United Kingdom</option>
            <option value="IN">India</option>
            <option value="CA">Canada</option>
            <option value="AU">Australia</option>
            <option value="DE">Germany</option>
            <option value="FR">France</option>
            <option value="JP">Japan</option>
            <option value="BR">Brazil</option>
            <!-- Add more countries as needed -->
          </select>
        </div>
        
        <!-- Organization -->
        <div>
          <label for="organization">Organization</label>
          <input type="text" id="organization" name="organization" placeholder="Your Company Name">
        </div>
        
        <!-- How Can I Help? -->
        <div>
          <label for="message">How Can I Help?</label>
          <textarea id="message" name="message" placeholder="Tell us more about your needs..."></textarea>
        </div>
        
        <!-- Checkbox + Privacy Text -->
        <div class="checkbox-group">
          <input type="checkbox" id="terms" name="terms" required>
          <label for="terms" style="font-weight: normal; margin-bottom: 0;">I agree to the Terms of Use and Privacy Policy</label>
        </div>
        <p class="privacy-text">
          By submitting this form, you agree to the Terms of Use and Privacy Policy. We value your privacy and will not share your information without your consent.
        </p>
        
        <!-- Submit Button -->
        <button type="submit" class="submit-btn">Submit</button>
      </form>
      
      <!-- Customer Support (Below Form) -->
      <div class="support">
        <h3>Customer Support</h3>
        <p>General Email:</p>
        <p><a href="mailto:support@goval.com" class="email-link">support@goval.com</a></p>
      </div>
    </div>

    <!-- Right Side: Image + Locations Below -->
    <div class="right-side">
      <img 
        src="https://placehold.co/500x500/007bff/ffffff?text=Contact+Us+Image" 
        alt="GoVal Contact Image" 
        class="contact-image"
        onerror="this.src='https://placehold.co/500x500/007bff/ffffff?text=Contact+Us+Image';"
      />
      
      <!-- Locations Section -->
      <div class="locations">
        <h3>Email Enquiries:</h3>
        <p>Sales: <a href="mailto:info@govalidation.com" class="email-link">info@govalidation.com</a></p>
        <p>Technical: <a href="mailto:govalsupport@adventsys.co" class="email-link">govalsupport@adventsys.co</a></p>
        <br>
        <h3>Global Locations:</h3>
        <p><strong>INDIA</strong><br>
        1st Floor, Prestige Samrah Plaza, St Marks Road, Shanthala Nagar, Ashok Nagar, Bengaluru 560 001, India<br>
        Phone: +91 99000 23710, +91 90081 50710</p>
        <br>
        <p><strong>USA</strong><br>
        7232 BROADWAY STE 306, JACKSON HEIGHTS NY 11372, USA<br>
        Phone: +1 (408) 457-0086, +1 (908) 656-8258</p>
      </div>
    </div>
  </div>

  <!-- Footer (Custom HTML replacement for Astro component) -->
  <footer class="site-footer">
    <p>&copy; 2025 GoVal. All rights reserved.</p>
    <p>
        <a href="#">Privacy Policy</a> | 
        <a href="#">Terms of Use</a> |
        <a href="#">Sitemap</a>
    </p>
  </footer>

  <!-- Custom Message Modal Structure -->
  <div id="message-modal" class="message-modal">
    <div class="modal-content">
      <p id="modal-text">Message content goes here.</p>
      <button class="ok-btn" onclick="closeModal()">OK</button>
    </div>
  </div>

  <script>
    // Global variable to track if the last modal message requires a form reset
    let shouldResetForm = false;

    /**
     * Shows the custom message modal.
     * Includes null checks for TypeScript compatibility.
     * @param {string} message - The message to display.
     * @param {boolean} success - True if the message is for a successful submission.
     */
    function showMessage(message, success = false) {
      const modal = document.getElementById('message-modal');
      const modalText = document.getElementById('modal-text');

      // Null check for the text content element
      if (modalText) {
        modalText.textContent = message;
      }
      
      // Null check for the modal container
      if (modal) {
        modal.style.display = 'block';
      }

      // Set the flag
      shouldResetForm = success;
    }

    /**
     * Closes the custom message modal and resets the form if it was a successful submission.
     * Uses instanceof HTMLFormElement check to safely access the .reset() method.
     */
    function closeModal() {
      const modal = document.getElementById('message-modal');
      
      // Null check for modal before hiding
      if (modal) {
        modal.style.display = 'none';
      }

      const formElement = document.getElementById('contactForm');
      
      // Null check and explicit type check for HTMLFormElement to safely use .reset()
      if (shouldResetForm && formElement instanceof HTMLFormElement) {
        formElement.reset(); 
        shouldResetForm = false; // Reset the flag after use
      }
    }

    /**
     * Handles form submission logic.
     * Uses instanceof HTMLInputElement check to safely access the .checked property.
     * @param {Event} event - The form submit event.
     */
    function handleSubmit(event) {
      event.preventDefault(); // Stop default form submission
      
      const terms = document.getElementById('terms');
      
      // Check for existence, ensure it's an HTMLInputElement, and check the .checked property
      if (!terms || !(terms instanceof HTMLInputElement) || !terms.checked) {
        showMessage('Please agree to the Terms of Use and Privacy Policy.');
        return;
      }
      
      // Success Case: showMessage is called with 'true'
      showMessage('Form submitted successfully! We\'ll get back to you soon.', true); 
    }

    // Close the modal if the user clicks anywhere outside of the modal content
    window.onclick = function(event) {
      const modal = document.getElementById('message-modal');
      // Null check for modal before checking target
      if (modal && event.target === modal) {
        closeModal();
      }
    }
  </script>
</body>
</html>
