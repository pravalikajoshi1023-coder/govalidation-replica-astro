---
// Footer.astro
// Define link data to keep the markup clean
const socialLinks = [
  { icon: 'linkedin', href: 'https://linkedin.com' },
  { icon: 'x', href: 'https://x.com' },
  { icon: 'youtube', href: 'https://youtube.com' },
];

const navLinks = [
  { text: 'Home', href: '/' },
  { text: 'GoVal AI', href: '/ai' },
  { text: 'Solutions', href: '/solutions' },
  { text: 'About GoVal', href: '/about' },
  { text: 'Blogs', href: '/blog' },
  { text: 'Customer Stories', href: '/stories' },
  { text: 'Contact Us', href: '/contact' },
];

const legalLinks = [
  { text: 'Terms of Use', href: '/terms' },
  { text: 'Privacy Policy', href: '/privacy' },
  { text: 'Sitemap', href: '/sitemap' },
];
---

<footer class="bg-[#1e3a67] text-white pt-12 pb-4 px-6 md:px-8">
  <div class="max-w-7xl mx-auto flex flex-col items-center text-center">

    <div class="mb-8">
      <p class="text-3xl font-bold tracking-wider mb-2">GOVAL</p>
      <p class="text-sm text-gray-300 max-w-sm">
        GoVal: Paperless Validation solutions for Life Science Industries.
      </p>
    </div>

    <div class="mb-10 w-full">
      <h3 class="text-lg font-semibold mb-4">Follow Us On</h3>
      <div class="flex justify-center space-x-4">
        {socialLinks.map((link) => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" class="w-10 h-10 flex items-center justify-center rounded-full bg-indigo-600 hover:bg-indigo-500 transition duration-150">
            <span class="text-white text-xl">
                {link.icon === 'linkedin' && 'in'}
                {link.icon === 'x' && 'X'}
                {link.icon === 'youtube' && '▶'}
            </span>
          </a>
        ))}
      </div>
    </div>

    <nav class="space-y-3 mb-10 text-sm w-full max-w-xs">
      {navLinks.map((link) => (
        <a href={link.href} class="block text-gray-300 hover:text-white transition-colors duration-200">
          {link.text}
        </a>
      ))}
    </nav>
    
    <div class="flex justify-center space-x-6 mb-8">
      <div class="w-20 h-20 bg-white/10 rounded-full flex items-center justify-center border-2 border-indigo-400">
        <span class="text-xs text-center leading-tight">ISO<br>9001</span>
      </div>
      <div class="w-20 h-20 bg-white/10 rounded-full flex items-center justify-center border-2 border-indigo-400">
        <span class="text-xs text-center leading-tight">ISO<br>27001</span>
      </div>
    </div>

    <div class="w-full h-px bg-gray-700/50 mb-4"></div>

    <div class="w-full">
      <p class="text-xs text-gray-400 mb-4">
        © 2025 GoVal
      </p>
      
      <div class="flex justify-center space-x-4 text-xs text-gray-400">
        {legalLinks.map((link, index) => (
          <>
            <a href={link.href} class="hover:text-white transition-colors duration-200">{link.text}</a>
            {index < legalLinks.length - 1 && <span class="hidden sm:inline">|</span>}
          </>
        ))}
      </div>
    </div>

  </div>
</footer>