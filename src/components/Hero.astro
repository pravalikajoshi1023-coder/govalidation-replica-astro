<script>
    // Fix for the 'alert()' issue: we convert inline 'onclick' or 'data-action' attributes 
    // into standard click listeners that use console.log instead of alert().
    document.addEventListener('DOMContentLoaded', () => {
        
        // 1. Process buttons with the new data-action attribute
        const buttonsWithData = document.querySelectorAll('button[data-action]');
        buttonsWithData.forEach(button => {
            const message = button.getAttribute('data-action');
            button.removeAttribute('onclick'); // Remove old, non-standard inline handler if it exists
            button.addEventListener('click', () => {
                console.log(`[Action] ${message}`);
            });
        });

        // 2. Process buttons that still might have the old inline onclick='alert(...)'
        // This is a robust fallback for the buttons that might have been missed or if 
        // the user's initial code still contained inline 'onclick' attributes.
        const legacyButtons = document.querySelectorAll('button[onclick]');
        legacyButtons.forEach(button => {
            const onclickAttr = button.getAttribute('onclick');
            
            // Check for null/non-alert content
            if (onclickAttr && onclickAttr.includes('alert(')) {
                
                // Extract the message from alert('MESSAGE') or alert("MESSAGE")
                const match = onclickAttr.match(/alert\(['"]([^'"]+)['"]\)/);
                const message = (match && match[1]) ? match[1] : 'Legacy button clicked!';
                
                // Remove the old inline handler
                button.removeAttribute('onclick');

                // Add the new, safe click handler
                button.addEventListener('click', () => {
                    console.log(`[Legacy Action] ${message}`);
                });
            }
        });
    });
